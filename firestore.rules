rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    // Users
    match /users/{userId} {
      allow read: if true;
      // Allow creation/updates if the document ID matches
      allow create, update: if request.resource.data.id == userId;
      // Allow deletions for cleanup (ideally restricted to an admin UID)
      allow delete: if true;
    }

    // Sessions
    match /sessions/{sessionId} {
      allow read, list: if true;
      // Allow anyone to register a session (needed for local hosts)
      allow create: if request.resource.data.id == sessionId;
      // Allow updates and deletions for heartbeats and cleanup
      allow update, delete: if true; 
    }
  }
}
